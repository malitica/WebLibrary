@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService

@model WebBiblioteka.Models.Book

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <div class="row">
        <img src="@($"/Book/ReadImg/{Model.BookId}")" alt="" width="500" height="375">
    </div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            Number of pages
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumOfPages)
        </dd>


        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author)
        </dd>
        <dt class="col-sm-2">
            Book description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookDesc)
        </dd>
    </dl>
</div>
<div>
    @if ((await AuthorizationService.AuthorizeAsync(User, "AdminOnly")).Succeeded)
    {
        <a asp-action="Edit" asp-route-id="@Model.BookId">Edit</a>
    }
    <a asp-action="Index">Back to List</a>

</div>
